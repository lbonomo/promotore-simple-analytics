{
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "phpmd/phpmd": "^2.15",
        "wp-coding-standards/wpcs": "^3.1",
        "pheromone/phpcs-security-audit": "^2.0"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpmd": "phpmd --cache-strategy timestamp **/*.php ansi ./phpmd.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}